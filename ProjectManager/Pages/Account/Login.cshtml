@page "/Login"
@model ProjectManager.Pages.Account.LoginModel
@* Login page *@
<div class="center-screen">
    <div class="surface">
        <h1>Login</h1>
        <form method="post">
            <label for="email">Email</label>
            <input type="email" id="email" name="Input.Email" placeholder="Your email address" required />

            <label for="password">Password</label>
            <input type="password" id="password" name="Input.Password" placeholder="Enter your password" required />

            <div class="remember-me">
                <input type="checkbox" id="remember" name="Input.RememberMe" />
                <label for="remember">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-blue">Log In</button>
        </form>

        <p class="signup-text">Don't have an account? <a href="/Register">Sign Up</a></p>
    </div>
</div>
