@page "/Register"
@model ProjectManager.Pages.Account.RegisterModel
@* Register site *@
<div class="center-screen">
    <div class="surface">
        <h1>Create Account</h1>
        <form method="post">
            <label for="fullname">Full Name</label>
            <input type="text" id="fullname" name="FullName" placeholder="Your full name" required />

            <label for="email">Email</label>
            <input type="email" id="email" name="Email" placeholder="Your email address" required />

            <label for="password">Password</label>
            <input type="password" id="password" name="Password" placeholder="Enter your password" required />

            <label for="confirm-password">Confirm Password</label>
            <input type="password" id="confirm-password" name="ConfirmPassword" placeholder="Confirm your password" required />

            <div class="checkbox-I-accept">
                <input type="checkbox" id="terms" required />
                <label for="terms">I accept <a href="#">Terms and Conditions</a></label>
            </div>

            <button type="submit" class="btn btn-blue">Create Account</button>
        </form>

        <p class="log-in">Already have an account? <a href="/Login">Login</a></p>
    </div>
</div>
